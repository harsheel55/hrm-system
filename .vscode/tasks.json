{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/Frontend"
      },
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ],
      "presentation": {
        "group": "frontend",
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "dotnet run",
      "options": {
        "cwd": "${workspaceFolder}/Backend/HRM-Backend"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "group": "backend",
        "reveal": "always",
        "panel": "new"
      }
    }
  ],
  "compounds": [
    {
      "label": "Run All",
      "dependsOn": [
        "Start Frontend",
        "Start Backend"
      ],
      "stopOnEntry": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}